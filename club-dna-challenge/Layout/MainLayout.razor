@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"></MudThemeProvider>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit"  Edge="Edge.Start" OnClick="((e) => DrawerToggle())"></MudIconButton>
            <MudText Style="align-content: center" Class="">Club DNA Challenge</MudText>
        <MudSpacer></MudSpacer>
        <MudSwitch Value="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode" ValueChanged="@ThemeToggle"></MudSwitch>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu/>
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Style="margin: auto">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private MudTheme _theme = new();
    bool _isDarkMode = true;
    bool _drawerOpen = true;
    
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void ThemeToggle()
    {
        _isDarkMode = !_isDarkMode;
    }
}
